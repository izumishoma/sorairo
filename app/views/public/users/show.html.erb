<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render "public/users/info", user: @user %>
    </div>
    <div class='col-md-9'>
      <% @posts. each do |post| %>
        <div class = "row ml-5 mt-5">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.image, size: "200x200" %><br>
          <% end %>
          <%= post.posted_text %>
        </div>
      <% end %>
    </div>
  </div>
</div>