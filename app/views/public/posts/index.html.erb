<%= flash[:notice] %>
<%= link_to I18n.t('post.post'), new_post_path %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render "public/users/info", user: current_user %>
    </div>
    <div class='col-md-1'></div>
    <div class='col-md-8 lm-5'>
      <h2><%= I18n.t('post.posts_list') %></h2>
      <% @posts. each do |post| %>
        <div class = "my-5">
          <div class = "row">
            <%= link_to user_path(post.user.id) do %>
              <%= post.user.display_name %>
            <% end %>
          </div>
          <div class = "row">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.image, size: "200x200" %>
            <% end %>
          </div>
          <div class = "row">
            <div id="favorite_<%= post.id %>">
              <%= render "public/favorites/favorite", post: post %>
            </div>
            <%= post.posted_text %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>