<%= flash[:notice] %>
<!--投稿のリンク-->
<%= link_to new_post_path do %>
  <i class="fas fa-plus-circle fa-3x", id = "post-plus"></i>
<% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render "public/users/info", user: current_user %>
    </div>
    <div class='col-md-1'></div>
    <div class='col-md-8 lm-5'>
      <h2><%= I18n.t('post.posts_list') %></h2>
      <%= render "public/posts/index", posts: @posts %>
    </div>
  </div>
</div>