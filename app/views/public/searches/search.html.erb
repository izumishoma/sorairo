<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image, size: "50x50" %>
          </td>
          <td>
            <%= link_to user_path(user.id) do %>
              <%= user.display_name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.image, size: "50x50"  %>
            <% end %>
          </td>
          <td><%= post.posted_text %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
