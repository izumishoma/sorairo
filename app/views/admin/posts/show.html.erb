<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'></div>
    <div class='col-md-8'>
      <h2><%= I18n.t('post.post_details') %></h2>
      <div class = "mt-4 card" style="width: 552px;">
        <div class = "card-header">
          <%= link_to admin_user_path(@post.user.id) do %>
            <%= image_tag @post.user.get_profile_image, size: "40x40" %>
            <%= @post.user.display_name %>
          <% end %>
        </div>
        <div class = "card-img-top">
          <%= image_tag @post.image, size: "550x400" %>
        </div>
        <div class = "card-body">
          <%= @post.posted_text %>
        </div>
      </div>
      <div class = "row ml-1 mt-2">
        <%= link_to I18n.t('post.post_delete'), post_path(@post.id), method: :delete, class: "btn btn-sm btn-danger" %>
      </div>
      <div class = "row mt-5">
        <%= render "public/comments/comment", comments: @post.comments %>
      </div>
    </div>
  </div>
</div>